@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}

<style type="text/css">
    body {
        background-image: url('/Images/properties-wallpaper.jpg');
        background-repeat: no-repeat;
        background-position: center center;
        background-size: cover;
    }
</style>

<div class="row">

    <div class="card col-md-4 offset-md-3 mx-auto">
        <article class="card-body">
            <a class="float-end btn btn-sm btn-outline-info" asp-page="./Login" asp-route-returnUrl="@Model.ReturnUrl">Login</a>
            <h4 class="card-title mb-4 mt-1">@ViewData["Title"]</h4>
            <form asp-route-returnUrl="@Model.ReturnUrl" method="post">
                <div class="form-floating mb-3">
                    <input asp-for="Input.Email" id="emailInput" class="form-control" placeholder="Email" type="email">
                    <label for="emailInput">Email Address</label>
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>

                <div class="row">
                    <div class="col-sm-6">
                        <div class="form-floating mb-3">
                            <input asp-for="Input.FirstName" id="firstNameInput" class="form-control" placeholder="First name" type="text">
                            <label for="firstNameInput">First Name</label>
                            <span asp-validation-for="Input.FirstName" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-sm-6">
                        <div class="form-floating mb-3">
                            <input asp-for="Input.LastName" id="lastNameInput" class="form-control" placeholder="Last name" type="text">
                            <label for="lastNameInput">Last Name</label>
                            <span asp-validation-for="Input.LastName" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <div class="form-floating mb-3">
                    <input asp-for="Input.Password" id="passwordInput" class="form-control" type="password" placeholder="Password">
                    <label for="passwordInput">Your password</label>
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                <div class="form-floating mb-3">
                    <input asp-for="Input.ConfirmPassword" id="passwordConfirmInput" class="form-control" type="password" placeholder="Confirm Password">
                    <label for="passwordConfirmInput">Confirm password</label>
                    <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                </div>
                <div class="form-group mt-3">
                    <button type="submit" class="float-end btn btn-primary">Register</button>
                </div>
            </form>
        </article>
    </div>
</div>

<style>
    .card {
        margin-top: 100px;
        margin-top: 100px;
        opacity: 0.9;
        border-radius: 15px;
    }
</style>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}