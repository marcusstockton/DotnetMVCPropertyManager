@model Website.Models.Portfolio

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Portfolio</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.CreatedDate)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.CreatedDate)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.UpdatedDate)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.UpdatedDate)
        </dd>
    </dl>
    <div class="card-deck">
    @foreach (var property in Model.Properties)
    {
        <div class="card" style="width: 18rem;">
            @if(property.Images.Any()){
                <img class="card-img-top" src="@property.Images.First().FilePath" alt="@property.Images.First().FileName">
            }else{
                <img class="card-img-top" src="https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcTCk0PhUNBlZeeI86ZYuxVQQoMc2SVNxbgk8nk6nh9AV78sEzWI&s" alt="Card image cap">
            }
            <div class="card-body">
                <h5 class="card-title">@string.Join(" ",property.Address.Line1, property.Address.Line2, property.Address.Line3, property.Address.Postcode, property.Address.Town, property.Address.City)</h5>
                <p class="card-text">Tenants: @property.Tenants.Count()</p>
                <a asp-controller="Property" asp-action="GetPropertyById" asp-route-portfolioId="@Model.Id" asp-route-propertyId="@property.Id" class="btn btn-primary">View</a>
            </div>
        </div>
    }
    </div>

    <a asp-controller="Property" asp-action="CreateProperty" asp-route-portfolioId="@Model.Id" class="btn btn-success"><i class="material-icons md-24">add</i> Add New Property</a>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.Id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>