@using Microsoft.AspNetCore.Identity
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager


@if (SignInManager.IsSignedIn( User ))
{
    <li class="nav-item">
        <a class="nav-link text-dark" asp-controller="Portfolios" asp-action="Index" title="Portfolios">Portfolios</a>
    </li>

    @if (User.IsInRole("Admin"))
    {
        <li class="nav-item">
            <a class="nav-link text-dark" asp-controller="Admin" asp-action="Index" title="Portfolios">Admin</a>
        </li>
    }
}