@using Microsoft.AspNetCore.Identity
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

@if (SignInManager.IsSignedIn(User))
{
    <li class="nav-item">
        <a class="nav-link text-dark" is-active-route asp-controller="Portfolio" asp-action="Index" title="Portfolios">Portfolios</a>
    </li>

    @if (User.IsInRole("Admin"))
    {
        <li class="nav-item">
            <a class="nav-link text-dark" is-active-route asp-controller="Admin" asp-action="Index" title="Portfolios">Admin</a>
        </li>
        <li class="nav-item">
            <a class="nav-link text-dark" is-active-route asp-controller="DocumentTypes" asp-action="Index" title="Document Types">Document Types</a>
        </li>
    }
}