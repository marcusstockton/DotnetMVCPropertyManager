@model Website.Models.DTOs.Tenants.TenantDTO

@{
}

<h4>TenantDTO</h4>
<hr />
<div>
    <div>
        <form asp-action="Edit" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="TenantImage" />
            <input type="hidden" asp-for="CreatedDate" />
            <input type="hidden" asp-for="UpdatedDate" />
            <input type="hidden" asp-for="Property" />
            <input type="hidden" asp-for="Notes" />
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="FirstName" class="control-label"></label>
                        <input asp-for="FirstName" class="form-control" />
                        <span asp-validation-for="FirstName" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="LastName" class="control-label"></label>
                        <input asp-for="LastName" class="form-control" />
                        <span asp-validation-for="LastName" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="PhoneNumber" class="control-label"></label>
                        <input asp-for="PhoneNumber" class="form-control" />
                        <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="JobTitle" class="control-label"></label>
                        <input asp-for="JobTitle" class="form-control" />
                        <span asp-validation-for="JobTitle" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="NationalityId" class="control-label"></label>
                        <select asp-for="NationalityId" class="form-control" asp-items="@ViewBag.Nationalities"></select>
                        <span asp-validation-for="Nationality" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="DateOfBirth" class="control-label"></label>
                        <input asp-for="DateOfBirth" class="form-control" />
                        <span asp-validation-for="DateOfBirth" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="TenancyStartDate" class="control-label"></label>
                        <input asp-for="TenancyStartDate" class="form-control" />
                        <span asp-validation-for="TenancyStartDate" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="TenancyEndDate" class="control-label"></label>
                        <input asp-for="TenancyEndDate" class="form-control" />
                        <span asp-validation-for="TenancyEndDate" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="TenantImage" class="control-label"></label>
                        <p><small>Uploading a new image will over-write the existing.</small></p>
                        <p><small id="preview">Currently the image is:</small></p>
                        <input type="file" asp-for="TenantImage" name="profilePic" />
                        <img src="@Model.TenantImage" class="img-thumbnail" style="height: 20vh;" alt="Tenant Image" />
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Save" class="btn btn-primary" />
                    </div>
                </div>

                

            </div>

        </form>
    </div>
</div>

<div>
    <a asp-action="Detail" asp-controller="Property" asp-route-portfolioId="@Model.Property.Portfolio.Id" asp-route-propertyId="@Model.Property.Id" asp-fragment="nav-tenant/">Back</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script src="~/js/Tenant/image-preview.js"></script>
    <script src="~/js/Tenant/tenantForm.js"></script>

}