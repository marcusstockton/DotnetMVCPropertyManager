@model Website.Models.DTOs.Tenants.TenantCreateDTO

<div class="row">
    <div class="col-md-12">
        <form asp-controller="Tenants" asp-action="Create" asp-route-propertyId="Property.Id" id="tenantCreateForm" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            @Html.HiddenFor(c => c.Property.Portfolio.Id, new { @id = "portfolio_id" })
            @Html.HiddenFor(x => x.Property.Id, new { @id = "property_id" })
            <div class="row">
                <div class="form-group col-md-6">
                    <label asp-for="FirstName" class="control-label"></label>
                    <input asp-for="FirstName" class="form-control" />
                    <span asp-validation-for="FirstName" class="text-danger"></span>
                </div>
                <div class="form-group col-md-6">
                    <label asp-for="LastName" class="control-label"></label>
                    <input asp-for="LastName" class="form-control" />
                    <span asp-validation-for="LastName" class="text-danger"></span>
                </div>
            </div>
            <div class="row">
                <div class="form-group col-md-6">
                    <label asp-for="PhoneNumber" class="control-label"></label>
                    <input asp-for="PhoneNumber" class="form-control" />
                    <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                </div>
                <div class="form-group col-md-6">
                    <label asp-for="JobTitle" class="control-label"></label>
                    <input asp-for="JobTitle" class="form-control" placeholder="Start typing..." />
                    <span asp-validation-for="JobTitle" class="text-danger"></span>
                </div>
            </div>
            <div class="row">
                <div class="form-group col-md-6">
                    <label asp-for="NationalityId" class="control-label"></label>
                    <select asp-for="NationalityId" class="form-control" asp-items="@ViewBag.Nationalities">
                        <option disabled selected>--Please Select--</option>
                    </select>
                    <span asp-validation-for="NationalityId" class="text-danger"></span>
                </div>
                <div class="form-group col-md-6">
                    <label asp-for="DateOfBirth" class="control-label"></label>
                    <input asp-for="DateOfBirth" class="form-control" />
                    <span asp-validation-for="DateOfBirth" class="text-danger"></span>
                </div>
                
            </div>
            <div class="row">
                <div class="form-group col-md-6">
                    <label asp-for="TenancyStartDate" class="control-label"></label>
                    <input asp-for="TenancyStartDate" class="form-control" value="@DateTimeOffset.Now" />
                    <span asp-validation-for="TenancyStartDate" class="text-danger"></span>
                </div>
                <div class="form-group col-md-6">
                    <label asp-for="TenancyEndDate" class="control-label"></label>
                    <input asp-for="TenancyEndDate" class="form-control" />
                    <span asp-validation-for="TenancyEndDate" class="text-danger"></span>
                </div>
            </div>
            <div class="row">
                <div class="form-group col-md-6">
                    <label asp-for="TenantImage" class="control-label"></label>
                    <input asp-for="TenantImage" type="file" class="form-control" />
                    <span asp-validation-for="TenantImage" class="text-danger"></span>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
        //<script src="~/js/Tenant/jobTitleAutocomplete.js" asp-append-version="true"></script>
     }
}